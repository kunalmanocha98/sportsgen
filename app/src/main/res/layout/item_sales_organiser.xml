<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorwhite"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_sales_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/helvetica_bold"
                android:text="â‚¹500000"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/txt_sales_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_sales_amount"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="Cricket Championship" />

            <TextView
                android:id="@+id/txt_sales_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_sales_event_name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="27-Apr-2018" />

            <View
                android:id="@+id/horizontal_spacing_sales_organiser"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/txt_sales_date"
                android:layout_marginTop="8dp"
                android:background="@color/colorblack" />

            <TextView
                android:id="@+id/txt_sales_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_spacing_sales_organiser"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="View details"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>