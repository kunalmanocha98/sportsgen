<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_age_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Age"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/edt_from_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_age_title"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/txt_to_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/edt_from_age"
                android:layout_margin="8dp"
                android:text="to"/>
            <EditText
                android:id="@+id/edt_to_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_to_title"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/edt_entry_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/txt_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Fees"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@id/edt_entry_price"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>