<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_blog_item"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/txt_blog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/img_blog_item"
                android:fontFamily="@font/helvetica_bold"
                android:text="Heading h yeh toh"
                android:textColor="@color/colorblack"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_blog_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:maxLines="2"
                android:layout_marginRight="8dp"
                android:layout_below="@id/txt_blog_title"
                android:layout_toRightOf="@id/img_blog_item"
                android:fontFamily="@font/helvetica_regular"
                android:text="subHeading h yeh toh yahan toh kuch bhi likh sakte h ."
                android:textSize="14sp"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="25-Apr-2018"
                android:textColor="@color/colorblack"
                android:textSize="10sp"
                android:fontFamily="@font/helvetica_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="bottom"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txt_blog_subtitle"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
