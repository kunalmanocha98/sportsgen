<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorwhite"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_event_name"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/txt_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_event_name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/helvetica_bold"
                android:text="Cricket Championship"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txt_event_participants_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="Participants"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_event_participants_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_name"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txt_event_participants_title"
                android:fontFamily="@font/helvetica_bold"
                android:text=" : 500"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_event_sales_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_participants_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="Sales"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_event_sales_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_participants_title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txt_event_participants_title"
                android:fontFamily="@font/helvetica_bold"
                android:text=" : 500"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_event_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_sales_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="Date"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_event_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_sales_title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txt_event_participants_title"
                android:fontFamily="@font/helvetica_bold"
                android:text=" : 27-Apr-2018"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_event_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_event_date_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="Ashok Vihar, New Delhi"
                android:textSize="14sp" />

            <View
                android:id="@+id/horizontal_spacing_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/txt_event_location_title"
                android:layout_marginTop="8dp"
                android:background="@color/colorblack" />
            <TextView
                android:id="@+id/txt_tournament_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_spacing_1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="View details"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>